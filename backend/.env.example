# Backend Environment Variables

# Application
PROJECT_NAME=RAG Data Analyst API
VERSION=0.1.0
ENVIRONMENT=development
DEBUG=true

# Single User Demo Auth
DEMO_PASSWORD=change-me-in-production
SECRET_KEY=your-secret-key-change-in-production-use-openssl-rand-hex-32
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# OpenAI API
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o
OPENAI_EMBEDDING_MODEL=text-embedding-3-large
OPENAI_TEMPERATURE=0.0

# Database (PostgreSQL with pgvector)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/rag_data_analyst

# Supabase (Optional - for production deployment)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-key

# ChromaDB
CHROMA_HOST=localhost
CHROMA_PORT=8001
CHROMA_PERSIST_DIR=./chroma_data

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# File Upload
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=104857600
ALLOWED_EXTENSIONS=[".csv",".xlsx",".xls",".json",".pdf"]

# RAG Settings
CHUNK_SIZE=1024
CHUNK_OVERLAP=200
TOP_K_RESULTS=5
SIMILARITY_THRESHOLD=0.7

# Agent Settings
MAX_ITERATIONS=10
AGENT_TIMEOUT=300