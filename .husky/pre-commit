#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Run frontend linting and formatting
echo "ğŸ” Running frontend checks..."
cd frontend && pnpm lint && pnpm format && cd ..

# Run backend linting and formatting
echo "ğŸ” Running backend checks..."
cd backend && poetry run ruff check app/ && poetry run black app/ && cd ..

echo "âœ… Pre-commit checks passed!"